<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corners"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/show_some_deatils"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resent_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colo"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="12/05/2024"
                    android:textColor="@color/white"
                    android:textSize="@dimen/hint_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_id"
                            android:textColor="@color/black"
                            android:textSize="@dimen/hint_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resent_order_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:text="Order Id"
                            android:textColor="@color/default_color"
                            android:textSize="@dimen/hint_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/resent_order_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer name"
                        android:textColor="@color/default_color"
                        android:textSize="@dimen/hint_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/resent_order_customer_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="@color/default_color"
                        android:textSize="@dimen/hint_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/resent_order_customer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_currency_rupee_24"
                        android:drawableTint="@color/default_color"
                        android:text="200"
                        android:textColor="@color/default_color"
                        android:textSize="@dimen/hint_text_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_weight="1"
                            android:background="@drawable/round_background"
                            android:text="@string/Invoice"
                            android:textAllCaps="false"
                            android:textSize="@dimen/hint_text_size"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/white" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/round_background"
                            android:layout_weight="1"
                            android:paddingEnd="10dp"
                            android:paddingBottom="3dp"
                            android:text="Status"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/hint_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/details_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colo"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/resent_order_detail_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Customer Name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/hint_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="3dp"
                    android:text="@string/Invoice"
                    android:textColor="@color/white"
                    android:textSize="@dimen/hint_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_id"
                        android:textColor="@color/app_theme"
                        android:textSize="@dimen/hint_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/history_product_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="Order Id"
                        android:textColor="@color/textview_text_color"
                        android:textSize="@dimen/hint_text_size" />

                    <TextView
                        android:id="@+id/history_product_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Status"
                        android:textColor="@color/app_theme"
                        android:textSize="@dimen/hint_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/history_product_inner_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/history_product_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="@color/default_color"
                        android:textSize="@dimen/hint_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Total"
                        android:textColor="@color/default_color"
                        android:textSize="@dimen/hint_text_size" />

                    <TextView
                        android:id="@+id/history_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_currency_rupee_24"
                        android:drawableTint="@color/default_color"
                        android:text="Price"
                        android:textColor="@color/default_color"
                        android:textSize="@dimen/hint_text_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>